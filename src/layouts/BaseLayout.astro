---
const { title = "Hockey Drills" } = Astro.props;
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <div class="brand"><a href={`${Astro.base}`}>Hockey Drills</a></div>
        <nav class="nav">
          <a href={`${Astro.base}`}>Home</a>
          <a href={`${Astro.base}drills/`}>Drills</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="footer">
        Built with Markdown + Astro. Update by editing files in <code>src/content/drills</code>.
      </footer>
    </div>
  </body>
</html>
